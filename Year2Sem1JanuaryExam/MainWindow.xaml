        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Year2Sem1JanuaryExam"
        mc:Ignorable="d"
        Title="MainWindow" Height="514.667" Width="800">
    <Grid Height="483" VerticalAlignment="Top">
        <CheckBox x:Name="chbxCurrentAccounts" Content="Current Accounts" HorizontalAlignment="Left" Margin="48,45,0,0" VerticalAlignment="Top" Click="chbxCurrentAccounts_Click"/>
